<h2>Crear Grupo</h2>
<form action="/Grupo/CrearGrupo" method="post">


	<div class="col-sm-7">
		<div class="form-group">
			<label for="exampleInputEmail1">Nombre del Grupo</label>
			<input type="text" class="form-control" placeholder="Ingrese el nombre del grupo" name="nombreGrupo">
		</div>

		<div class="form-group">
			<label for="exampleInputEmail1">Número Máximo de Estudiantes</label>
			<input type="number" class="form-control" placeholder="Ingrese el numero maximo de estudiantes" name="numeroMaximoEstudiante">
		</div>
		
		<div class="form-group">
			<label for="">Materia</label>

			<select class="form-control" name="idMateria">
				<% for(var i=0; i<materias.length; i++){ %>
					<option value='<%=materias[i].id%>'>
						<%=materias[i].nombreMateria%>
					</option>
					<%  } %>
			</select>
		</div>

		<button type="submit" class="btn btn-success">Crear Grupo =)</button>
	</div>

</form>